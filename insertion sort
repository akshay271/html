#include<stdio.h>
#include<conio.h>
#include<time.h>
void insort(int[],int);
void main()
{
int n,arr[20],i;
clock_t begin,end;
clrscr();
printf("enter the size\n");
scanf("%d",&n);
printf("Enter array elemnets\n");
for(i=0;i<n;i++)
{
scanf("%d",&arr[i]);
}
begin=clock();
insort(arr,n);
end=clock();
//printf("%1f %1f",begin,end);
printf("\n cpu time %1f",(end-begin)/CLK_TCK);
getch();
}

void insort(int arr[],int n)
{
int i,j,k,s;
delay(2000);
for(i=1;i<n;i++)
{
k=arr[i];
j=i-1;
while(j>=0 && arr[j]>k)
{
arr[j+1]=arr[j];
j=j-1;
}
arr[j+1]=k;
printf("\n pass : %d\n",i);
for(s=0;s<n;s++)
{
printf("%d",arr[s]);
}
}
printf("\n sorted elemnets are\n");
for(i=0;i<n;i++)
{
printf("%d",arr[i]);
}
}
