#include<stdio.h>
#include<conio.h>
#include<time.h>
#define max 20
int x=1,n;
void quicksort(int[],int,int);
int partition(int[],int,int);
void main()
{
    int a[max],high,low,i;
    clock_t begin,end;
    clrscr();
    printf("\n Enter The Number Of Elements\n");
    scanf("%d",&n);
    printf("\n Enter The Elements\n");
    for(i=0;i<n;i++)
    {
	scanf("%d",&a[i]);
    }
    low=0;
    high=n-1;
    begin=clock();
    quicksort(a,low,high);
    end=clock();
    printf("\n sorted element are\n");
    for(i=0;i<n;i++)
    {
    printf("%d",a[i]);
    }
    printf("\n Time Taken Is %1f for 1 CPU cycles",(end-begin)/CLK_TCK);
    getch();
}
void quicksort(int a[],int low,int high)
{
    int i,j;
    if(low<high)
    {
	j=partition(a,low,high);
	quicksort(a,low,j-1);
	quicksort(a,j+1,high);
    }
}
int partition(int a[],int low,int high)
{
    int key=a[low];
    int i=low+1;
    int j=high;
    int temp;
    delay(1000);
    while (1)
    {
	while ((i<high) && (key>a[i]))
	{
	    i++;
	}
	while (key<a[j])
	{
	    j--;
	}
	if(i<j)
	{
	    temp=a[i];
	    a[i]=a[j];
	    a[j]=temp;
	}
	else
	{
	    temp=a[low];
	    a[low]=a[j];
	    a[j]=temp;
	    printf("\n Pass %d : \t",x);
	    for (i = 0; i < n; i++)
	    {
		printf("%d",a[i]);
	    }
	    x++;
	    return j;
	}

    }


}
